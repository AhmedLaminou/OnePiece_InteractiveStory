<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="#2B1810"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:strokeColor="#8B4513"
    app:strokeWidth="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- WANTED Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D32F2F"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="WANTED"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:letterSpacing="0.3" />

        <!-- Character Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1A1A1A">

            <ImageView
                android:id="@+id/char_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />

            <!-- Dead or Alive -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#88000000"
                android:gravity="center"
                android:paddingVertical="2dp"
                android:text="DEAD OR ALIVE"
                android:textColor="#FFD700"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.15" />

            <!-- Rank badge -->
            <TextView
                android:id="@+id/rank_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_rank_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="#1"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/char_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D2817"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="Monkey D. Luffy"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Bounty Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D32F2F"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¿ "
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bounty_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,000,000,000"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
