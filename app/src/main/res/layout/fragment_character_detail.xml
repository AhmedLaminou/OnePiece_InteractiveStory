<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- Character Card Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/bg_secondary"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/op_gold_primary"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Image with gradient overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/image_carousel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/header_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile" />

                    <!-- Gradient overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_bottom" />

                    <!-- Favorite button -->
                    <ImageButton
                        android:id="@+id/btn_favorite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_glass_card"
                        android:padding="12dp"
                        android:src="@android:drawable/btn_star_big_off"
                        app:tint="@color/op_gold_primary" />

                    <!-- Status badge -->
                    <TextView
                        android:id="@+id/status_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_margin="12dp"
                        android:background="@drawable/bg_status_alive"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="ALIVE"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <!-- Name and Japanese name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/char_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Character Name"
                        android:textColor="@color/op_gold_primary"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/char_japanese_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Japanese Name"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/char_alias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="The Pirate King"
                        android:textColor="@color/op_red_primary"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Grid Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/bg_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textColor="@color/op_gold_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Row 1: Age, Height, Blood Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AGE"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/stat_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HEIGHT"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/stat_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="174 cm"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLOOD"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/stat_blood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Row 2: Origin, Birthday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ORIGIN"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/stat_origin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="East Blue"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BIRTHDAY"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/stat_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="May 5"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Affiliation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AFFILIATION"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/stat_affiliation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Straw Hat Pirates"
                        android:textColor="@color/op_gold_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Occupation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OCCUPATION"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/stat_occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pirate Captain"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Power Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/bg_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POWER STATS"
                    android:textColor="@color/op_gold_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.github.mikephil.charting.charts.RadarChart
                    android:id="@+id/stats_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Biography Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/bg_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIOGRAPHY"
                    android:textColor="@color/op_gold_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/char_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biography..."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Debut Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/bg_secondary"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRST APPEARANCE"
                    android:textColor="@color/op_gold_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHAPTER"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/debut_chapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EPISODE"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/debut_episode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quote / Humor Line -->
        <TextView
            android:id="@+id/humor_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_glass_card"
            android:padding="16dp"
            android:text="Famous Quote"
            android:textColor="@color/op_gold_primary"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
