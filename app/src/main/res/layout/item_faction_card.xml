<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/bg_secondary"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/op_gold_primary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Name + Type Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/factionName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Straw Hat Pirates"
                android:textColor="@color/op_gold_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/factionTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_chapters"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="PIRATE CREW"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Type (large display) -->
        <TextView
            android:id="@+id/factionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="PIRATE CREW"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:visibility="gone" />

        <!-- Leader -->
        <TextView
            android:id="@+id/factionLeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:text="Leader: Monkey D. Luffy"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <!-- Total Bounty -->
        <TextView
            android:id="@+id/factionBounty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_bounty"
            android:drawablePadding="8dp"
            android:text="â‚¿ 8,806,200,100"
            android:textColor="@color/op_gold_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>