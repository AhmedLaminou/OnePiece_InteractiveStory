<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/glass_white"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Character Image with Gradient Overlay -->
        <FrameLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/character_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_overlay" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_haki_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Alive"
                android:textColor="@color/text_primary"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Bounty Display -->
            <LinearLayout
                android:id="@+id/bounty_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:background="@drawable/bg_glass_card"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textColor="@color/op_gold_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bounty_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="3,000,000,000"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <!-- Character Info Section -->
        <LinearLayout
            android:id="@+id/info_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_container">

            <!-- Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Monkey D. Luffy"
                    android:textColor="@color/text_gold"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Haki Indicators -->
                <LinearLayout
                    android:id="@+id/haki_indicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/haki_observation"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_chip_selected"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/haki_armament"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_chip_selected"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/haki_conqueror"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/bg_chip_selected"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Japanese Name -->
            <TextView
                android:id="@+id/character_name_japanese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Japanese Name"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <!-- Alias/Epithet -->
            <TextView
                android:id="@+id/character_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="6dp"
                android:drawableTint="@color/op_gold_primary"
                android:text="&quot;Straw Hat&quot;"
                android:textColor="@color/text_accent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <!-- Affiliation & Role -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character_affiliation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_unselected"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Straw Hat Pirates"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/character_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_chip_selected"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Captain"
                    android:textColor="@color/bg_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Stats Preview -->
            <LinearLayout
                android:id="@+id/stats_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Strength Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Strength"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <ProgressBar
                        android:id="@+id/stat_strength"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="85"
                        android:progressDrawable="@drawable/bg_stat_bar" />

                    <TextView
                        android:id="@+id/stat_strength_value"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="85"
                        android:textColor="@color/op_gold_primary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Speed Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Speed"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <ProgressBar
                        android:id="@+id/stat_speed"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="90"
                        android:progressDrawable="@drawable/bg_stat_bar" />

                    <TextView
                        android:id="@+id/stat_speed_value"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="90"
                        android:textColor="@color/op_gold_primary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Haki Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Haki"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <ProgressBar
                        android:id="@+id/stat_haki"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="95"
                        android:progressDrawable="@drawable/bg_stat_bar" />

                    <TextView
                        android:id="@+id/stat_haki_value"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="95"
                        android:textColor="@color/op_gold_primary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Devil Fruit Info -->
            <LinearLayout
                android:id="@+id/devil_fruit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_glass_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:tint="@color/df_paramecia" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/devil_fruit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gomu Gomu no Mi"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/devil_fruit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paramecia"
                        android:textColor="@color/df_paramecia"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
