<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- Header with title and total -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_glass_card"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WANTED"
            android:textColor="@color/op_red_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEAD OR ALIVE"
            android:textColor="@color/op_gold_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.2" />

        <TextView
            android:id="@+id/total_bounties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Listed: 0 Pirates"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Filter chips -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filter_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                app:chipBackgroundColor="@color/chip_bg_selector"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_emperors"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emperors"
                app:chipBackgroundColor="@color/chip_bg_selector"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_supernovas"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supernovas"
                app:chipBackgroundColor="@color/chip_bg_selector"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_warlords"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ex-Warlords"
                app:chipBackgroundColor="@color/chip_bg_selector"
                app:checkedIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Bounty List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bounty_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/filter_scroll"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Loading state -->
    <FrameLayout
        android:id="@+id/loading_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/op_gold_primary" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
